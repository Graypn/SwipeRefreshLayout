<?xml version="1.0" encoding="utf-8"?>
<com.graypn.swiperefreshlayout.demo.view.header.SJDRefreshHeaderView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/refresh_header_height_jd">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <com.graypn.swiperefreshlayout.demo.view.SingleBounce
                android:id="@+id/iv_ball"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="2dp"
                app:shape="circle"
                app:singleSrcSize="10dp"
                app:speed="300"
                app:src="@mipmap/ic_refresh_ball"/>

            <ImageView
                android:id="@+id/iv_hand"
                android:layout_width="32dp"
                android:layout_height="16dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="13dp"
                android:layout_marginTop="-13dp"
                android:background="@mipmap/ic_refresh_hand"/>
        </LinearLayout>

    </RelativeLayout>

</com.graypn.swiperefreshlayout.demo.view.header.SJDRefreshHeaderView>